{% extends "base.html.j2" %}

{% block content %}

<fieldset class="form-group border rounded-3 p-3">
    <legend class="float-none w-auto px-3">Postępy użytkowników</legend>
    <table class="table">
        {% for user in users %}
        <tr>
            <th scope="col">{{ user.username }}</th>
            {% for day in days %}
            <td style="width: 4%; text-align: center; background-color: rgb(132, 190, 135); {%- if day.quest %}border: 4px solid green; {%- endif %}
            {%- for disco in discos %}
            {%- if disco.day_id == day.id and disco.user_id == user.id %}background-color: yellow; color: green;{% endif %}
            {%- endfor %}">
            {{ day.day_no }}
        </td>
        {% endfor %}
    </tr>
    {% endfor %}
</table>
</fieldset>


<form class="form-inline" method="post">
    <fieldset class="form-group border rounded-3 p-3">
        <legend class="float-none w-auto px-3">Przesuń kalendarz w czasie</legend>
        <label class="my-1 mr-2" for="time_shift">Dla którego dnia miesiąca wygenerować kalendarz?</label>
        <input class="form-control my-1 mr-sm-2" name="time_shift" id="time_shift" value="{{ date_today }}">
        <button type="submit" class="btn btn-success my-1">Ustaw</button>
    </fieldset>
</form>


<form method="post">
    <fieldset class="form-group border rounded-3 p-3">
        <legend class="float-none w-auto px-3">Usuń odwiedziny</legend>
        <div class="row p-3">
            <div class="col">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="del_discos" id="del_all" value="del_all" checked="checked">
                    <label class="form-check-label" for="del_all">wszystkie</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="del_discos" id="del_taf" value="del_taf">
                    <label class="form-check-label" for="del_taf">dzisiejsze i przyszłe</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="del_except_quests" id="del_except_quests" value="del_except_quests">
                    <label class="form-check-label" for="del_except_quests">poza questami</label>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="del_users">dla użytkowników:</label>
                    <select class="form-control" name="del_users" id="del_users" size="5" multiple>
                        {%- for user in users %}
                        <option value="{{ user.id }}">{{ user.username }}</option>
                        {%- endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-grid col-4 mx-auto">
                <button type="submit" class="btn btn-danger">Usuń</button>
            </div>
        </div>
    </fieldset>
</form>


<form method="post">
    <fieldset class="form-group border rounded-3 p-3">
        <legend class="float-none w-auto px-3">Dodaj odwiedziny i rozwiąż wszystkie zadania</legend>
        <div class="row p-3">
            <div class="col">
                <div class="form-group">
                    <label for="solve_users">dla użytkowników:</label>
                    <select class="form-control" name="solve_users" id="solve_users" size="5" multiple>
                        {%- for user in users %}
                        <option value="{{ user.id }}">{{ user.username }}</option>
                        {%- endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-grid col-4 mx-auto">
                <button type="submit" class="btn btn-danger">Rozwiąż</button>
            </div>
        </div>
    </fieldset>
</form>

{% endblock %}
