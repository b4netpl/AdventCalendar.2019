{% extends "base.html.j2" %}

{% block content %}

<h1>Pomoc</h1>
<p>Witamy w kalendarzu adwentowym na kolejny rok! :)</p>

<div class="accordion" id="accordionHelpUser">
  {% for helpitem in userhelp %}
  <div class="accordion-item">
    <h2 class="accordion-header" id="heading{{ helpitem.id }}">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ helpitem.id }}" aria-expanded="false" aria-controls="collapse{{ helpitem.id }}">
        <strong>{{ helpitem.title }}</strong>
      </button>
    </h2>
    <div id="collapse{{ helpitem.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ helpitem.id }}" data-bs-parent="#accordionHelpUser">
      <div class="accordion-body">
        {{ helpitem.body }}
      </div>
    </div>
  </div>
  {% endfor %}
</div>

